@page
@model AddressBookWebApp.Pages.AddressBooks.IndexModel

<partial name="_Notification" />

<div class="container p-3">
  <div class="row pt-4">
    <div class="col-6">
      <h2 class="text-light">Address Book List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-page="/AddressBooks/Create" class="btn btn-primary">
            <i class="bi bi-plus-square"></i>&nbsp; Create New Contact    
        </a>
    </div>
  </div>

  <br /><br />

  <table class="table table-bordered table-striped" style="width:100%">
      <thead>
          <tr>
              <th>Name</th>
              <th>Address</th>
              <th>Phone Number</th>
              <th>Email Address</th>
          </tr>
      </thead>
      <tbody>
          @foreach (var obj in Model.AddressBooks)
          {
            <tr>
                <td width="30%">@obj.Name</td>
                <td width="25%">@obj.Address</td>
                <td width="25%">@obj.PhoneNumber</td>
                <td width="25%">@obj.EmailAddress</td>
                <td>
                    <div class="w-bg-opacity-75 btn-group" role="group">
                        <a asp-page="/AddressBooks/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                        <a asp-page="/AddressBooks/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
          }
      </tbody>
  </table>
</div>